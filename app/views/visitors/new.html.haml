            = f.input_field :email, label: false, :placeholder => 'Your email address...', :class => 'button'
            = f.button :submit, "START NOW", :class => "button", :id => 'visitor_submit'
          %p.small.pad_top_small
            *We're currently in closed trials, please join our queue and we'll send you an invite when we're ready to help more friends keep in touch
          #benefits
            %ul.no_bullets
              %li
                %p.lead
                  %span.tick.glyphicon.glyphicon-ok
                  Simply choose friends
              %li
                %p.lead
                  %span.tick.glyphicon.glyphicon-ok
                  Set dates, times and location
              %li
